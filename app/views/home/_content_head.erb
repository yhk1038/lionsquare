    			        <!--        <label class="fg-label">Message</label>-->
    			        <!--    </div>-->
    			        <!--</div>-->
        		        <div class="form-group fg-float m-b-30">
                            <div class="fg-line">
                                <input type="email"  name="user[email]" class="form-control input-sm" placeholder="" id="user_email">
                                <label class="fg-label">메일을 입력하세요.</label>
                            </div>
                        </div>
    			        <div class="form-group fg-float m-b-30">
    			            <div class="fg-line">
    			                <input type="password" name="user[password]" class="form-control input-sm" placeholder="" id="user_password">
    			                <label class="fg-label">비밀 번호를 입력하세요.</label>
    			            </div>
    			        </div>
    			        <button type="submit" class="btn btn-info waves-effect">로그인</button>
    			        <a href="/users/sign_up" class="btn btn-warning waves-effect">회원가입</a>
    			    </form>
