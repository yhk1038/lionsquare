<script>
	$("#nav_dropdown").click(function(){
		$("#nav_category").toggle("fast");
	});
	<% Category.all.each do |cti| %>
		$(".nav_category_<%= cti.id %>").hover(function(){
			$("#nav_board_<%= cti.id %>").show();
		},function(){
			$("#nav_board_<%= cti.id %>").hide();
		});
	<% end %>
